{
  "name": "WPBASE",
  "version": "3.0.0",
  "main": "gulpfile.js",
  "author": "VESPERA",
  "copyright": "VESPERA",
  "license": "UNLICENSED",
  "private": true,

  "paths": {
    "src": {
      "styles": "./src/styles/",
      "stylesDist": "./src/styles/dist/",
      "fonts": "./src/fonts/",
      "js": "./src/js/",
      "img": "./src/images/"
    },
    "build": {
      "css": "./assets/css/",
      "fonts": "./assets/fonts/",
      "js": "./assets/js/",
      "img": "./assets/images/"
    }
  },
  "vars": {
    "siteJsName": "app.min.js",
    "siteCssName": "app.css",
    "scssName": "main.scss"
  },
  "globs": {
    "distCss": [
      "./src/styles/libs/*.css",
      "./src/fonts/fontello/css/fontello-embedded.css",
      "./src/styles/dist/main.css"
    ],
    "distJs": [
      "./src/js/libs/jquery.min.js",
      "./src/js/libs/*.js",
      "./src/js/main.js"
    ]
  },
  "devDependencies": {
    "gulp": "^3.9.0",
    "gulp-concat": "^2.6.0",
    "gulp-cssnano": "^2.1.2",
    "gulp-filter": "^5.0.1",
    "gulp-header": "^1.8.7",
    "gulp-if": "^2.0.1",
    "gulp-imagemin": "^3.1.1",
    "gulp-load-plugins": "^1.3.0",
    "gulp-sass": "^2.1.0",
    "gulp-sass-glob-import": "^0.1.0",
    "gulp-size": "^2.1.0",
    "gulp-sourcemaps": "^2.2.1",
    "gulp-uglify": "^1.5.4",
    "moment": "^2.14.1"
  }
}
